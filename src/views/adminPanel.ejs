<!DOCTYPE html>
<html>

<head>
    <title>Admin Panel</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/styles/admin-panel.css">
    <!--<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script> -->
</head>

<body>
    <main>
        <div id="container">
            <div id="accounts">
                <h1>Accounts</h1>
                <hr>
                <div class='scroll'>
                    <% for( var i = 0; i < accounts.length; i++ ) { %>
                        <div class='account'>
                            <a href="/profile/id/<%=accounts[i]._id%>" class='name'><%=accounts[i].firstName%> <%=accounts[i].lastName%></a>
                            <br>
                            <a href='/profile/id/<%=accounts[i]._id%>/delete' class='delete'>
                                <button>Delete</button>
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
            <div id="projects">
                <h1>Projects</h1>
                <hr>
                <div class='scroll'>
                    <% for( var i = 0; i < projects.length; i++ ) { %>
                        <div class='project'>
                            <a href='/project/id/<%=projects[i]._id%>' class='name'><%=projects[i].title%></a>
                            <br>
                            <a href='/project/id/<%=projects[i]._id%>/delete' class='delete'>
                                <button>Delete</button>
                            </a>
                        </div>
                    <% } %>
                </div>
                
            </div>
        </div>
    </main>

    <% include templates/footer.ejs %>
    
</body>

</html>